
<form id="formCadastro" method="post">
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label for="Nome">Nome:</label>
                <input required="required" type="text" class="form-control" id="Nome" name="Nome" placeholder="Ex.: João" maxlength="50">
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label for="Sobrenome">Sobrenome:</label>
                <input required="required" type="text" class="form-control" id="Sobrenome" name="Sobrenome" placeholder="Ex.: da Silva" maxlength="255">
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label for="Sobrenome">CPF:</label>
                <input required="required" type="text" class="form-control" id="cpf" name="CPF" placeholder="Ex.: 000.000.000-00" maxlength="14" oninput="AplicarMascara('cpf')">
                <div id="msgCpfInvalido" class="alert alert-danger" role="alert" hidden>
                    CPF Inválido!
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label for="Nacionalidade">Nacionalidade:</label>
                <input required="required" type="text" class="form-control" id="Nacionalidade" name="Nacionalidade" placeholder="Ex.: brasileira" maxlength="50">
            </div>
        </div>

    </div>
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <label for="CEP">CEP:</label>
                <input required="required" type="text" class="form-control" id="CEP" name="CEP" placeholder="Ex.: 01011-100" maxlength="9" oninput="AplicarMascara('CEP')">
                <div id="msgCepInvalido" class="alert alert-danger" role="alert" hidden>
                    CEP Inválido!
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label for="Estado">Estado:</label>
                <input required="required" type="text" class="form-control" id="Estado" name="Estado" maxlength="50" placeholder="Ex.: São Paulo" disabled>
                <input type="hidden" class="form-control" id="uf" maxlength="2">
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label for="Cidade">Cidade:</label>
                <input required="required" type="text" class="form-control" id="Cidade" name="Cidade" maxlength="50" placeholder="Ex.: São Paulo" disabled>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                <label for="Logradouro">Logradouro:</label>
                <input required="required" type="text" class="form-control" id="Logradouro" name="Logradouro" placeholder="Ex.: Rua Boa Vista 253" maxlength="500" disabled>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label for="Email">E-mail:</label>
                <input required="required" type="text" class="form-control" id="Email" name="Email" placeholder="Ex.: email@email.com" maxlength="2079">
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label for="Telefone">Telefone:</label>
                <input required="required" type="tel" class="form-control" id="Telefone" name="Telefone" placeholder="Ex.: (11) 2020-3030" maxlength="13" oninput="AplicarMascara('Telefone')">
            </div>
        </div>
    </div>

    <div class="row">



        <div class="col-lg-12">
            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#modalBeneficiarios">
                Beneficiários
            </button>

            <div class="pull-right">
                <button type="submit" class="btn btn-sm btn-success">Salvar</button>
                @Html.ActionLink("Voltar", "Index", "Cliente", new { }, new { @class = "btn btn-sm btn-danger" })
            </div>
        </div>
    </div>


</form>

<div class="modal fade" id="modalBeneficiarios" tabindex="-1" role="dialog" aria-labelledby="modalBeneficiariosLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalBeneficiariosLabel">Beneficiários</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="formCadastro" method="post">
                    <div class="row">
                        <div class="form-group col-md-4">
                            <label for="Nome">Nome:</label>
                            <input required="required" type="text" class="form-control" id="NomeBeneficiario" name="NomeBeneficiario" placeholder="Ex.: João" maxlength="50">
                        </div>

                        <div class="form-group col-md-4">
                            <label for="Sobrenome">CPF:</label>
                            <input required="required" type="text" class="form-control" id="cpfBeneficiario" name="CPFBeneficiario" placeholder="Ex.: 000.000.000-00" maxlength="14" oninput="AplicarMascara('cpfBeneficiario')">
                            <div id="msgCpfInvalidoBeneficiario" class="alert alert-danger" role="alert" hidden>
                                CPF Inválido!
                            </div>
                        </div>

                        <div class="btnIncluirBeneficiario">
                            <button id="incluirBeneficiarios" type="button" class="btn btn-sm btn-success" onclick="IncluirBeneficiario()">Incluir beneficiário</button>
                        </div>
                    </div>
                </form>


                <div class="row">
                    <table id="tabelaBeneficiarios" class="table table-hover">
                        <thead>
                            <tr>
                                <th scope="col">CPF</th>
                                <th scope="col">Nome</th>
                                <th scope="col">Ações</th>
                            </tr>
                        </thead>
                        <tbody>
                        </tbody>
                    </table>
                </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success" data-dismiss="modal">Confirmar</button>
            </div>
        </div>
    </div>
</div>